<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <link rel="stylesheet" href="../assets/ie.css" type="text/css">
        <link rel="stylesheet" href="../assets/print.css" type="text/css">
        <link rel="stylesheet" href="../assets/screen.css" type="text/css">
        <link rel="stylesheet" href="../assets/styles.css" type="text/css">
		<script src="../assets/SpryTabbedPanels.js" type="text/javascript"></script>
		<link href="../assets/SpryTabbedPanels.css" rel="stylesheet" type="text/css">
        <script language="JavaScript" src="../assets/scripts.js"></script>
        <title>Veterinaria Petshop</title>
    </head>
    <body>
        <div class="container-page">

            <!-- Inicio Cabecera del Sistema -->
            <div id="encabezado" class="span-24 last">				
                <div id="logo" class="span-24 last">
                    <img src="../assets/log1.gif" />
                </div>
                <!--div id="aplicacion" class="span-7 last">
                    Nombre de la Aplicaci&oacute;n
                </div-->
                				
            </div>
            <!-- Fin Cabecera del Sistema -->

			<!-- Inicio Menu del Sistema -->
				
				<div class="span-24 last">
					<div class="barra-menu span-24 last">
						<ul class="menu-1">
							<li class="active"><a href="/users">Usuarios</a></li>
						</ul>
						<div class="menu-2 span-24 last">
							<div class="span-16 active">
								<%= link_to 'Nuevo Usuario', new_user_path %>
							</div>
						
						</div>
					</div>
				</div>
            <!-- Fin Menu del Sistema -->
			
            <!-- Inicio Cuerpo de la Pagina -->
          <!-- Sign UP Non Modal -->
				<div class="container">
				  <div class="row center">
					<h3 style="margin-bottom: 20px;">Registro de Usuario</h3>
				  </div>
				  <div class="row">
					<div class="span4 offset4 well">
					  <%= form_for @user, html: {class: "form"} do |f| %>
						<% if @user.errors.any? %>
						  <div class="alert alert-error">
							<h2>Form is invalid</h2>
							<ul>
							  <% @user.errors.full_messages.each do |message| %>
								<li><%= message %></li>
							  <% end %>
							</ul>
						  </div>
						<% end %>
						<fieldset>
						  <legend></legend>
						  
									<div class="field">	
									 <%= f.label :Doctors %><br />	 
                          
									</div>

						  
						  <div class="control-group">
							<%= f.label :Usuario, nil ,class: "control-label" %>
							<div class="controls"><%= f.text_field :email, class: "input-xlarge" %></div>
							
						  </div>
						  
						  <div class="control-group">
							<%= f.label :password, nil ,class: "control-label" %>
							<div class="controls"><%= f.password_field :password, class: "input-xlarge" %></div>
						  </div>
						  <div class="control-group">
							<%= f.label :password_confirmation, nil ,class: "control-label" %>
							<div class="controls"><%= f.password_field :password_confirmation, class: "input-xlarge" %></div>
						  </div>
						  
						  <div class="actions"><%= f.submit t("user.sign_up", default: "Registrar"), class: "btn btn-large btn-primary"  %></div>
						</fieldset>
					  <% end %>
					</div>
				  </div>
				</div>
				<!-- End of Sing UP Non Modal -->
	
			<!--script type="text/javascript">
			var TabbedPanels1 = new Spry.Widget.TabbedPanels("TabbedPanels1");
			
			  </script-->
            <!-- Fin Cuerpo de la Pagina -->

            <!-- Inicio Pie del Sistema --> 
            <div id="pie" class="span-24 last">
                Derechos Reservados
            </div>
            <!-- Fin Pie del Sistema --> 
        </div>
    </body>
</html>


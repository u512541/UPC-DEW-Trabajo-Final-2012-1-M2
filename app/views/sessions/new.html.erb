<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <link rel="stylesheet" href="../assets/ie.css" type="text/css">
        <link rel="stylesheet" href="../assets/print.css" type="text/css">
        <link rel="stylesheet" href="../assets/screen.css" type="text/css">
        <link rel="stylesheet" href="../assets/styles.css" type="text/css">
        <script language="JavaScript" src="../assets/scripts.js"></script>
        <title>Veterinaria Petshop</title>
    </head>
    <body>
        <div class="container-page">

            <!-- Inicio Cabecera del Sistema -->
            <div id="encabezado" class="span-24 last">				
                <div id="logo" class="span-24 last">
                    <img src="../assets/logo1.gif" />
                </div>
                <!--div id="aplicacion" class="span-7 last">
                    Nombre de la Aplicaci&oacute;n
                </div-->
                				
            </div>
            <!-- Fin Cabecera del Sistema -->

		
				
            <!-- Fin Menu del Sistema -->
			
            <!-- Inicio Cuerpo de la Pagina -->
            <div class="span-24 last" style="text-align:center;">
				<h3>Ingreso al Sistema</h3>
			</div>
			<%= form_tag (sessions_path), class: "form" do %>
				<div class="span-24 last">
					<table>
						<tr>
							<td style="text-align:center;">
								<%= label_tag :Ingrese_Usuario, nil ,class: "control-label" %>
							</td>
						</tr>
						<tr>
							<td style="text-align:center;">
								<%= text_field_tag :email, params[:email], class: "input-xlarge" %>
							</td>
						</tr>
						<tr>
							<td style="text-align:center;">
								<%= label_tag :Ingrese_Password, nil, class: "control-label"  %>
							</td>
						</tr>
						<tr>
							<td style="text-align:center;">
								<%= password_field_tag (:password), nil ,class: "input-xlarge" %>
							</td>
						</tr>
						<tr>
							<td style="text-align:center;">
								<%= submit_tag t("user.log_in", default: "Validar Usuario"), class: "btn btn-large btn-primary" %>
							</td>
						</tr>
					</table>
				</div>
			<% end %>
			
            <!-- Fin Cuerpo de la Pagina -->

            <!-- Inicio Pie del Sistema --> 
           
            <!-- Fin Pie del Sistema --> 
        </div>
    </body>
</html>





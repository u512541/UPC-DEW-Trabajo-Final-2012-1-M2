<h1>Listar Pacientes</h1>

<table>
  <tr>
    <th>Dueno</th>
    <th>Especie</th>
    <th>Raza</th>
    <th>Genero</th>
    <th>Tipo de Sangre</th>
    <th>Esterilizado</th>
    <th>Tamano</th>
    <th>Actividad</th>
    <th>Peso</th>
    <th>Fecha de Nacimiento</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pacientes.each do |paciente| %>
  <tr>
    <td><%= paciente.Dueno %></td>
    <td><%= paciente.Especie %></td>
    <td><%= paciente.Raza %></td>
    <td><%= paciente.Genero %></td>
    <td><%= paciente.TipoSangre %></td>
    <td><%= paciente.Esterilizado %></td>
    <td><%= paciente.Tamano %></td>
    <td><%= paciente.Actividad %></td>
    <td><%= paciente.Peso %></td>
    <td><%= paciente.FechaNacimiento %></td>
    <td><%= link_to 'Visualizar', paciente %></td>
    <td><%= link_to 'Editar', edit_paciente_path(paciente) %></td>
    <td><%= link_to 'Eliminar', paciente, confirm: 'Estas tu seguro?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

